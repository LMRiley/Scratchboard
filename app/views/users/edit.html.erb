	</div>
	<div class = "span4">	
		<div class = "well">
			<div align = "center">		
				<%= twitter_bootstrap_form_for @user do |user| %>
					<%= user.inputs 'Edit your profile' do %>
					<%= gravatar_for(@user) %>
