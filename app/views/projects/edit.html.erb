<!DOCTYPE HTML>
<html lang="en">
<div class="container-fluid">
	<div class= "row-fluid" >
		</br>
		<div class = "span3">
			&nbsp;
		</div>
		<div class = "span6">
		</br>		
			<div class = "well">
				<div align = "center">		
					<%= twitter_bootstrap_form_for @project do |project| %>
						<%= project.inputs 'Project Brief' do %>
						</br>
						<%= project.text_area :brief, "__", :size => "40x15" %>
						<%= project.actions do %>
							<%= project.submit 'Save', :class => 'btn'%>
						<% end %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<div class = "span3">
			&nbsp;
			<%= render 'shared/project_error_messages' %>
		</div>
	</div>
</div>
</html>