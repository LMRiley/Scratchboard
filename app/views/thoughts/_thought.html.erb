<div class = "span3">
	<div class = "well">
		<div class = "break-word">
			<big><%= auto_link(thought.content, :html => {:target => '_blank' }) %></big>
		</div>
		<div>		
			</br>
		</div>
		<% if thought.scratchfile.exists? %>
			<% if thought.has_thumbnail? %>
	        	<td><%= link_to(image_tag(thought.scratchfile.url(:small), :class => 'thumbnail'),
	            thought.scratchfile.url, :target => 'new') %></td>
	   			<% else %>
				<div align = "center">
					<%= link_to(file_icon, thought.scratchfile.url, :target => 'new') %>
					<td><%= thought.scratchfile_file_name %></td>
				</div>
	        <% end %>	
		<% end %>
		</br>
		<em>Added <%= time_ago_in_words(thought.created_at) %> ago</em>
	</div>
</div>


