<!DOCTYPE html>
<html>
  <head>
	<%= favicon_link_tag %>
    <title><%= title %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tag %>
  </head>
  <body>
	<div class="container">
		<%= render 'layouts/header' %>
		<div class = "container">
			<% flash.each do |key, value| %>
		    	<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
		</div>
    	<%= yield %>
		<%= render 'layouts/footer' %>
  	</div>
  </body>
</html>