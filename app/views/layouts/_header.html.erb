<!DOCTYPE html>
<html lang="en">
<div class = "row">
    </br>
	</br>
	<div class = "span5">
		<% if signed_in? %>
			<%= link_to logo, current_user %>
		<% else %>
		    <%= link_to logo, root_path %>
		<% end %>
	</div>
	<% if signed_in? %>
		<div class = "span4">
			&nbsp;
		</div>
		<div class = "span3">
			</br>
			<div class="btn-group">
			  <a class="btn dropdown-toggle" data-toggle="dropdown" href= '#'>
				<i class="icon-user"></i>
				<%= current_user.name %>
			    <span class="caret"></span>
			  </a>
			  <ul class="dropdown-menu">
			    <%= link_to "Projects", current_user %>
				<%= link_to "Edit Profile", edit_user_path(current_user) %>
				<li class="divider"></li>
				<%= link_to "About", '/about' %>
				<li class="divider"></li>
				<%= link_to "Log Out", signout_path %>
			  </ul>
		</div>
	<% else %>
		<div class = "span5">
			&nbsp;
		</div>
		<div class = "span2">
			</br>
			<a class = 'btn' href = '/signin'><i class="icon-lock"></i> Login</a>
		</div>
	<% end %>
</br>
</div>
</html>

